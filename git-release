#!/bin/bash

VERSION="$1"

if [ -z "$VERSION" ]; then
  echo "Usage: ./git-release <version-tag>"
  exit 1
fi

# Check working directory is clean
if [ -n "$(git status --porcelain)" ]; then
  echo "âŒ Working directory is dirty. Please commit or stash changes first."
  exit 1
fi

# Update version in package.json
echo "ğŸ“ Updating package.json version to $VERSION..."
jq --arg v "$VERSION" '.version = $v' package.json > package.tmp.json && mv package.tmp.json package.json
if [ $? -ne 0 ]; then
  echo "âŒ Failed to update version. Aborting."
  exit 1
fi

# Commit version bump
git add package.json
git commit -m "chore: bump version to $VERSION"

# Run build
echo "ğŸ›  Running build..."
pnpm build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Aborting release."
  git reset --soft HEAD~1
  exit 1
fi

echo "âœ… Build passed."

# Merge to main and tag
echo "ğŸš€ Releasing version $VERSION..."
git checkout main || exit 1
git merge --ff-only dev || exit 1
git tag "$VERSION" || exit 1
git push github main --tags || exit 1
git checkout dev

echo "ğŸ‰ Release $VERSION completed."

